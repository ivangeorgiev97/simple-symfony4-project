{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="mb-3 mt-3 row">
            <div class="col-sm-8"><h2>Manage Categories</h2></div>
            <div class="col-sm-4"><a href="{{ path('admin_categories_new') }}"><button class="btn btn-primary float-right">New category</button></a></div>
        </div>
        <hr class="hr">
        <div class="row">
            <table id="categories" class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.category_name }}</td>
                            <td><a href="{{ path('admin_categories_edit', {'id': category.id}) }}"><button class="btn btn-success">Edit</button></a></td>
                            <td><a href="{{ path('admin_categories_delete', {'id': category.id}) }}"><button class="btn btn-danger delete-category" data-id="{{ category.id }}" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(categories) }}
        </div>
    </div>

{% endblock %}
